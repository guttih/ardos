<div class="row">
	<h3 class="page-header pull-right">device log</h3>
</div>
<h4>Device: "{{item.name}}".</h4>

{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<div class="row">
	<p> </p>
</div>
<div class="row">
	<div id = "device-list" class="device-list list-group">
	<!-- listItems will be added here-->
	</div>
</div>
{{#if device}} <!-- if you want to edit a specific user -->
			<script type="text/javascript">
			var device = {{{device}}};
		</script>
{{/if}}

<table id="table-log" class="table table-bordered table-hover">
	<thead>
	</thead>
	<tfoot>
	</tfoot>
	<tbody>
	</tbody>
</table>

<button onclick="openChartPage()" class="btn btn-xs btn-success"> 
	<span class="glyphicon glyphicon-stats"></span>&nbsp;Line chart 
</button>
<button class="btn btn-xs btn-default btn-log-pins"> 
	<span class="glyphicon glyphicon-circle-arrow-down"></span>&nbsp;Log current pin values
</button>
<button class="btn btn-xs btn-danger btn-delete-all-device-logs"> 
	<span class="glyphicon glyphicon-trash"></span>&nbsp;Delete all logs
</button>

<script src="/js/bootstrap.min.js"></script>	
<script src="/js/devicelog.js"></script>	
