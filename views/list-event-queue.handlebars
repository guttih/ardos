{{#if events}}
<script type="text/javascript">
	var events = {{{events}}};
	var serverDate = new Date('{{{serverDate}}}');
</script>
{{/if}}	
	

<div class="row"><h3 class="page-header pull-right" style="margin-bottom: 14px;">Upcoming events</h3></div>			
<table><tr><td>Server time:&nbsp;</td><td><b><span id="server-time" class="hidden">{{serverDate}}</span></b></td><td>&nbsp;</td></tr></table>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}

<table id="table-event" class="table table-bordered table-hover">
	<thead>
	</thead>
	<tfoot>
	</tfoot>
	<tbody>
	</tbody>
</table>
<br>
<div>
	<div>
		<button onclick="window.location.href='/triggeractions/resetEventQueue'" class="btn btn-xs btn-default pull-left"
		data-toggle="tooltip" data-placement="right" title="Recalculate all trigger events"
		> 
			<span class="glyphicon glyphicon-time"></span>&nbsp;Reset EventQueue&nbsp;
		</button>
	</div>
	<div class="pull-right">
		<button onclick="window.location.href='/triggeractions/list-all'" class="btn btn-xs btn-default pull-right"
		data-toggle="tooltip" data-placement="left" title="Both active and inactive trigger actions"
		> 
			<span class="glyphicon glyphicon-time"></span>&nbsp;List trigger actions&nbsp;
		</button>
	</div>
</div>
<script src="/js/list-event-queue.js"></script>
