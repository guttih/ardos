<div class="row"><h3 class="page-header pull-right">Server location</h3></div>

{{#if errors}}
	{{#each errors}}
		<div class="alert alert-danger">{{msg}}</div>
	{{/each}}
	
		<script type="text/javascript">
			var item = {{{item}}};
		</script>
{{/if}}
<br><br>
<div class="container">
                <div class="col-xs-6 col-sm-4  col-xs-offset-01 col-sm-offset-1 col-md-offset-1">
                    <label for="latitude">Latitude</label>
                    <input id="latitude" type="number" step="0.001" class="form-control" value="0"/>
                </div>
                <div class="col-xs-6 col-sm-4 col-xs-offset-0 col-sm-offset-1 col-md-offset-1">
                    <label for="longitude">Longitude</label>
                    <input id="longitude" type="number" step="0.001" class="form-control" value="0"/>
                </div>
</div>				
<div class="container">

				<div class="col-xs-6 col-sm-4  col-xs-offset-01 col-sm-offset-1 col-md-offset-1">
					<button id="button-save"     type="button" class="form-control location-button btn btn-success">Save location</button>
				</div>
				<div class="col-xs-6 col-sm-4  col-xs-offset-01 col-sm-offset-1 col-md-offset-1">
					<button id="button-location" type="button" class="form-control hidden-if-not-https location-button btn btn-default " data-toggle="tooltip" data-placement="top" title="Get location from your device and send it to the page">Get my location</button>
				</div>
</div>

<br><br><br>
			<table class="table sunrise">
				<thead>
					<th>Date</th>
					<th>Sunrise</th>
					<th class="hide-small">Sun noon</th>
					<th>Sunset</th>
				</thead>
				<tbody>
					<tr>
						<td style="text-align: center">
							<div >
								<div class="form-group">                        
									<!-- https://www.npmjs.com/package/bootstrap-datepicker -->
									<div class="input-group date" id="datepicker1">
										<input type="text" class="form-control" />
										<span class="input-group-addon">
											<span class="glyphicon glyphicon-calendar"></span>
										</span>
									</div>
								</div>
							</div>
							<script type="text/javascript">
								$('#datepicker1').datepicker({
									format: "dd/mm/yyyy",
									calendarWeeks: true,
									todayHighlight: true,
									toggleActive: false
								}).datepicker('setDate','now');
							</script>


						</td>
						<td class="time"><span id="sunrise"></span></td>
						<td class="time hide-small"><span id="solar-noon"></span></td>
						<td class="time"><span id="sunset"></span></td>
						
					</tr>
				</tbody>
			</table>
    


<script type="text/javascript">
	var geoLocation = {{{geoLocation}}};
</script>
<script src="/js/settings-location.js" type="text/javascript" charset="utf-8"></script>